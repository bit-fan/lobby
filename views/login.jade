extends layout
block content
    script.
        var serverIp = '#{serverIP}'
        var serverLocalIp = '#{serverLocalIP}'
    .row(style='margin-top:40px')
        .col-md-offset-3.col-md-6
            .text-center
                ul.nav.nav-tabs
                    li.active
                        a(href="#signIn" data-toggle="tab", tt='sign in')
                    li
                        a(href='#signUp' data-toggle="tab", tt='sign up')
                .tab-content
                    #signUp.tab-pane.fade
                        .form-group
                            label.control-label(tt='ID')
                            .form-control
                                input#signUpID.margin-right-5
                                a#checkValidPlayerName.margin-right-5(tt='check')
                                label#checkPlayerNameResult
                        .form-group
                            label.control-label(tt='password')
                            input#signUpPassword.form-control(type='password')
                        .form-group
                            label.control-label(tt='password')
                            input#signUpPassword1.form-control(type='password')
                        button#submitSignUp(tt='submit')
                        label#signupResult
                    #signIn.tab-pane.fade.in.active
                        .form-group
                            label.control-label(tt='ID')
                            input#signInID.form-control
                        .form-group
                            label.control-label(tt='password')
                            input#signInPassword.form-control(type='password')
                        button#submitSignIn.margin-right-5(tt='submit')
                        button(tt='Login As Guest')
                        label#loginResult.text-danger
    //script(type='text/javascript' src='util/jQueryUtil.js')
    script(type='text/javascript' src='/js/login.js')
